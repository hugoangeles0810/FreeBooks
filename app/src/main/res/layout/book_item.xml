<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/background_book_item">

        <ImageView
            android:id="@+id/item_book_image"
            android:src="@drawable/book"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/item_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Head First PHP y MySQL"
                android:textSize="18sp"
                android:textColor="@color/primaryColor"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/item_book_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A Step-by-Step Guide to Creating Dynamic Websites"
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="@color/descriptionColor"
                android:maxLines="3"
                android:ellipsize="end"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>